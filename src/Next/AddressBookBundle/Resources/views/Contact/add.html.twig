{% extends "NextAddressBookBundle::base.html.twig" %}

{% form_theme form "bootstrap_3_layout.html.twig" %}

{% block title %}Ajouter un contact - AddressBook{% endblock %}

{% block body %}
    

<div class="container">
    <h1>Ajouter un contact</h1>
    {{form_start(form, {'attr': {'novalidate': 'novalidate'} })}}
        {{form_row(form.prenom)}}
        {{form_row(form.nom)}}
        {{form_row(form.email)}}
        {{form_row(form.telephone)}}
        {{form_row(form.societe)}}
        {{form_row(form.groupes)}}
        <div>
            {{form_widget(form.save, {'attr': {'class': 'btn btn-primary'} }) }}
        </div>
    {{form_end(form)}}
</div>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('bundles/nextaddressbook/css/select2.css')}}">
{% endblock %}


{% block javascripts %}
<script src="{{asset('bundles/nextaddressbook/js/select2.js')}}"></script>
<script>
    $('select').select2();
</script>
{% endblock %}