{% extends "NextAddressBookBundle::base.html.twig" %}

{% block title %}Liste des contacts - AddressBook{% endblock %}

{% block body %}
<div class="container">
    
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}
    
    <h1>Liste des contacts</h1>
    <table class="table table-striped table-hover">
        <tr>
            <th>Nom complet</th>
            <th>Actions</th>
        </tr>
        {% for contact in contacts %}
        <tr>
            <td>{{contact.prenom}} {{contact.nom}}</td>
            <td>
                <a href="{{path('next_address_book_contact_show', {'id': contact.id})}}" class="btn btn-xs btn-primary">DÃ©tails</a>
                <a href="{{path('next_address_book_contact_modify', {'id': contact.id})}}" class="btn btn-xs btn-warning">Modifier</a>
                <a href="{{path('next_address_book_contact_delete', {'id': contact.id})}}" class="btn btn-xs btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
